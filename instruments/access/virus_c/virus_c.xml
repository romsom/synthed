<!DOCTYPE instrument SYSTEM "../../instrument.dtd">

<instrument id="virus_c">

	<module id="virus_c"/>
	
	<data>
		<patch path="virus_c_banks.xml"/>
		<patch path="virus_c_midi.xml"/>
	</data>
	
	<decoders>
		<decoder path="virus_decoder.xml"/>
	</decoders>
	
	<interfaces>
		<interface path="virus_c_ui.xml"/>
	</interfaces>
	
	<modes>
		<mode id="single" caption="Singles">
			<bank caption="Singles Bank A" min="0" max="127"/>
			<bank caption="Singles Bank B" min="0" max="127"/>
			<bank caption="Singles Bank C" min="0" max="127"/>
			<bank caption="Singles Bank D" min="0" max="127"/>
			<bank caption="Singles Bank E" min="0" max="127"/>
			<bank caption="Singles Bank F" min="0" max="127"/>
			<bank caption="Singles Bank G" min="0" max="127"/>
			<bank caption="Singles Bank H" min="0" max="127"/>
		</mode>
		<mode id="multi" caption="Multis">
			<bank caption="Multis Bank" min="0" max="127"/>
		</mode>
		<mode id="global" caption="Globals">
		</mode>
	</modes>
	
</instrument>
