<!DOCTYPE instrument SYSTEM "../../instrument.dtd">

<instrument id="k2000">

	<module id="k2000"/>
	
	<patches>
		<patch path="k2000_pgm.xml"/>
	</patches>
	
	<decoders>
		<decoder path="k2000_decoder.xml"/>
	</decoders>
	
	<interfaces>
		<interface path="k2000_ui.xml"/>
	</interfaces>
	
	<modes>
		<mode id="pgm" caption="Program">
			<bank caption="100" min="0" max="99"/>
			<bank caption="200" min="0" max="99"/>
			<bank caption="300" min="0" max="99"/>
			<bank caption="400" min="0" max="99"/>
			<bank caption="500" min="0" max="99"/>
			<bank caption="600" min="0" max="99"/>
			<bank caption="700" min="0" max="99"/>
			<bank caption="800" min="0" max="99"/>
			<bank caption="900" min="0" max="99"/>
		</mode>
	</modes>
	
</instrument>
